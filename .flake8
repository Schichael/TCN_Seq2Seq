[flake8]
# Matching the black line length (default 88)
max-line-length = 88
max-complexity = 10
extend-ignore =
    # See https://github.com/PyCQA/pycodestyle/issues/373
    E203,
    E731,
    E741,
    C901,
    F541
exclude =
    .flake8,
    .git,
    .venv/,
    .bkp/,
    __pycache__,
    # Add your folders to ignore here
    build/,
    output/,
    bin/,
    src/,
